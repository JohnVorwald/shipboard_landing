<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="landing_test">

    <!-- Core system plugins -->
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"/>

    <!-- Physics - standard gravity -->
    <physics name="default_physics" type="dart">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
    </physics>

    <!-- Scene -->
    <scene>
      <ambient>0.6 0.6 0.6 1</ambient>
      <background>0.4 0.6 0.9 1</background>
    </scene>

    <light type="directional" name="sun">
      <pose>0 0 100 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
    </light>

    <!-- Ground plane (ship deck) -->
    <model name="deck">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>20 10 0.1</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>20 10 0.1</size></box>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Quadcopter - starts 5m above deck -->
    <model name="quadcopter">
      <pose>0 0 5 0 0 0</pose>
      <link name="base_link">
        <inertial>
          <mass>2.0</mass>
          <inertia>
            <ixx>0.02</ixx>
            <iyy>0.02</iyy>
            <izz>0.04</izz>
          </inertia>
        </inertial>

        <collision name="collision">
          <geometry>
            <box><size>0.4 0.4 0.15</size></box>
          </geometry>
        </collision>

        <!-- Bright orange body for visibility -->
        <visual name="body">
          <geometry>
            <box><size>0.3 0.3 0.1</size></box>
          </geometry>
          <material>
            <ambient>0.9 0.3 0.0 1</ambient>
            <diffuse>1.0 0.4 0.0 1</diffuse>
          </material>
        </visual>

        <!-- Arms -->
        <visual name="arm1">
          <pose>0.2 0.2 0 0 0 0.785</pose>
          <geometry><box><size>0.3 0.03 0.02</size></box></geometry>
          <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>
        <visual name="arm2">
          <pose>0.2 -0.2 0 0 0 -0.785</pose>
          <geometry><box><size>0.3 0.03 0.02</size></box></geometry>
          <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>
        <visual name="arm3">
          <pose>-0.2 0.2 0 0 0 -0.785</pose>
          <geometry><box><size>0.3 0.03 0.02</size></box></geometry>
          <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>
        <visual name="arm4">
          <pose>-0.2 -0.2 0 0 0 0.785</pose>
          <geometry><box><size>0.3 0.03 0.02</size></box></geometry>
          <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>

        <!-- Motors (colored) -->
        <visual name="motor1">
          <pose>0.25 0.25 0.03 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.05</length></cylinder></geometry>
          <material><diffuse>0.9 0.1 0.1 1</diffuse></material>
        </visual>
        <visual name="motor2">
          <pose>0.25 -0.25 0.03 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.05</length></cylinder></geometry>
          <material><diffuse>0.1 0.9 0.1 1</diffuse></material>
        </visual>
        <visual name="motor3">
          <pose>-0.25 0.25 0.03 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.05</length></cylinder></geometry>
          <material><diffuse>0.1 0.1 0.9 1</diffuse></material>
        </visual>
        <visual name="motor4">
          <pose>-0.25 -0.25 0.03 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.05</length></cylinder></geometry>
          <material><diffuse>0.9 0.9 0.1 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- Camera looking at scene -->
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>-10 -10 8 0 0.4 0.8</pose>
      </camera>
    </gui>

  </world>
</sdf>
